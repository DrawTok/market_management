<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.example.market_management.Controllers.BillController">

    <TableView fx:id="billTable" layoutX="14.0" layoutY="50.0" prefHeight="400.0" prefWidth="600.0">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="payment" text="Payment method" />
            <TableColumn fx:id="typeColumn" text="Type" />
            <TableColumn fx:id="createAtColumn" text="Create At" />
        </columns>
    </TableView>
    <HBox layoutX="14.0" layoutY="460.0" spacing="10.0">
        <Button fx:id="addButton" text="Add" onAction="#handleAddBill" />
        <Button fx:id="detailButton" text="Detail" onAction="#handleViewBillDetails" />
    </HBox>
    <TextField fx:id="searchField" layoutX="14.0" layoutY="10.0" promptText="Search..."/>
</AnchorPane>
