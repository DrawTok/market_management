<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.market_management.Dialogs.BillDetailsDialog" >
    <GridPane hgap="10" vgap="10">
        <Label text="Employee:" GridPane.rowIndex="0"/>
        <TextField fx:id="employeeField" GridPane.columnIndex="1" GridPane.rowIndex="0" editable="false"/>

        <Label text="Customer:" GridPane.rowIndex="1"/>
        <TextField fx:id="customerField" GridPane.columnIndex="1" GridPane.rowIndex="1" editable="false"/>

        <Label text="Type:" GridPane.rowIndex="2"/>
        <TextField fx:id="typeField" GridPane.columnIndex="1" GridPane.rowIndex="2" editable="false"/>

        <Label text="Payment Method:" GridPane.rowIndex="3"/>
        <TextField fx:id="paymentMethodField" GridPane.columnIndex="1" GridPane.rowIndex="3" editable="false"/>

        <Label text="Total:" GridPane.rowIndex="4"/>
        <TextField fx:id="totalField" GridPane.columnIndex="1" GridPane.rowIndex="4" editable="false"/>

        <Label text="Cart:" GridPane.rowIndex="5"/>
        <TableView fx:id="cartTable" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <columns>
                <TableColumn fx:id="productNameColumn" text="Product Name"/>
                <TableColumn fx:id="unitPriceColumn" text="Unit Price"/>
                <TableColumn fx:id="qtyColumn" text="Quantity"/>
            </columns>
        </TableView>
    </GridPane>

    <HBox spacing="10" alignment="center">
        <Button text="Close" onAction="#handleClose"/>
    </HBox>
</VBox>
