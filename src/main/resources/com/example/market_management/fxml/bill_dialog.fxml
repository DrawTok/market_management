<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.market_management.Dialogs.BillDialog">
    <children>
        <GridPane hgap="10" vgap="10">
            <children>
                <Label text="Customer:" GridPane.rowIndex="0"/>
                <ComboBox fx:id="customerComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Type:" GridPane.rowIndex="1"/>
                <TextField fx:id="typeField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Points:" GridPane.rowIndex="2"/>
                <TextField fx:id="pointField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Promotion Code:" GridPane.rowIndex="3"/>
                <TextField fx:id="promotionCodeField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Cart:" GridPane.rowIndex="4"/>
                <TableView fx:id="cartTable" GridPane.columnIndex="1" GridPane.rowIndex="4">
                    <columns>
                        <TableColumn fx:id="productIdColumn" text="Product ID"/>
                        <TableColumn fx:id="qtyColumn" text="Quantity"/>
                    </columns>
                </TableView>
            </children>
        </GridPane>

        <HBox spacing="10" alignment="center">
            <Button text="Save" onAction="#handleSave"/>
            <Button text="Cancel" onAction="#handleCancel"/>
        </HBox>
    </children>
</VBox>
