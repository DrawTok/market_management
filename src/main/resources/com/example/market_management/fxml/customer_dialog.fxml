<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.example.market_management.Dialogs.CustomerDialog"
          prefWidth="400" prefHeight="400">
    <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Birthday:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <DatePicker fx:id="birthdayPicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Address:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="addressField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Phone Number:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="phoneNumberField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Point:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="pointField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Type:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="typeField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label text="Active:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <CheckBox fx:id="statusCheckBox" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <HBox spacing="10" GridPane.rowIndex="7" GridPane.columnSpan="2" alignment="center">
        <Button text="OK" onAction="#handleOk"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</GridPane>
