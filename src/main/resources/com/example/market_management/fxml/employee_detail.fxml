<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.example.market_management.Dialogs.EmployeeDetailDialog"
          hgap="10" vgap="10" alignment="CENTER">
    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Label fx:id="usernameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Label fx:id="emailLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Full Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Label fx:id="fullNameLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Birthday:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <Label fx:id="birthdayLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Role:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <Label fx:id="roleLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Department:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <Label fx:id="departmentLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label text="Status:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <Label fx:id="statusLabel" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
</GridPane>
