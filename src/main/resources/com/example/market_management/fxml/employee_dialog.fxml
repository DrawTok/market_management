<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.layout.HBox?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.example.market_management.Dialogs.EmployeeDialog"
          hgap="10" vgap="10" alignment="CENTER">
    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Full Name:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="fullNameField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Birthday:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <DatePicker fx:id="birthdayPicker" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Role:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <ComboBox fx:id="roleComboBox" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label text="Department:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <ComboBox fx:id="departmentComboBox" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="7" GridPane.columnIndex="1">
        <Button text="Cancel" onAction="#handleCancel"/>
        <Button text="OK" onAction="#handleOk"/>
    </HBox>
</GridPane>
