<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.example.market_management.Controllers.ProductController">

    <TableView fx:id="productTable" layoutX="14.0" layoutY="50.0" prefHeight="400.0" prefWidth="600.0">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="nameColumn" text="Name" />
            <TableColumn fx:id="unitPriceColumn" text="Unit Price" />
            <TableColumn fx:id="unitColumn" text="Unit" />
            <TableColumn fx:id="inStockColumn" text="In Stock" />
        </columns>
    </TableView>
    <HBox layoutX="14.0" layoutY="460.0" spacing="10.0">
        <Button fx:id="detailButton" text="Detail" onAction="#handleViewProduct" />
        <Button fx:id="addButton" text="Add" onAction="#handleNewProduct" />
        <Button fx:id="updateButton" text="Update" onAction="#handleEditProduct" />
        <Button fx:id="deleteButton" text="Delete" onAction="#handleDeleteProduct" />
    </HBox>
    <TextField fx:id="searchField" layoutX="14.0" layoutY="10.0" promptText="Search..."/>

</AnchorPane>
