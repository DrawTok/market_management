<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.market_management.Dialogs.ProductDialog">
    <children>
        <GridPane hgap="10" vgap="10">
            <children>
                <Label text="Name:" GridPane.rowIndex="1"/>
                <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Barcode:" GridPane.rowIndex="2"/>
                <TextField fx:id="barcodeField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Unit Price:" GridPane.rowIndex="3"/>
                <TextField fx:id="unitPriceField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Unit:" GridPane.rowIndex="4"/>
                <TextField fx:id="unitField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="Category:" GridPane.rowIndex="5"/>
                <ComboBox fx:id="categoryComboBox" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                <Label text="Vendor:" GridPane.rowIndex="6"/>
                <ComboBox fx:id="vendorComboBox" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

                <Label text="In Stock:" GridPane.rowIndex="7"/>
                <TextField fx:id="inStockField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

                <Label text="Description:" GridPane.rowIndex="8"/>
                <TextArea fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

                <Label text="Status:" GridPane.rowIndex="9"/>
                <CheckBox fx:id="statusField" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
            </children>
        </GridPane>
        <HBox spacing="10" GridPane.rowIndex="6" GridPane.columnSpan="2" alignment="center">
            <Button text="Save" onAction="#handleSave"/>
            <Button text="Cancel" onAction="#handleCancel"/>
        </HBox>
    </children>
</VBox>
